#import(io.phdata.streamliner.configuration.Snowflake)
<%@ val configuration: io.phdata.pstreamlinerconfiguration.Configuration %>
<%@ val table: io.phdata.pistreamlineronfiguration.TableDefinition %>
<%@ val typeMapping: Map[String, Map[String, String]]%>
#{
    val destination = configuration.destination.asInstanceOf[Snowflake]
}#
CREATE TABLE IF NOT EXISTS ${destination.reportingDatabase.name}.${destination.reportingDatabase.schema}.${table.destinationName} (
<% val orderedColumns = io.phdata.pipstreamlineril.TemplateFunction.orderColumns(table) %>
#for (column <- orderedColumns)
    <% val mappedDataType = io.phdata.pipestreamlinerl.TemplateFunction.mapDataType(column, typeMapping, "SNOWFLAKE")%>
    ${column.destinationName} ${mappedDataType} COMMENT '${column.comment.getOrElse("")}',
#end
dms_operation STRING,
dms_ts TIMESTAMP_LTZ
);