<%@ val configuration: io.phdata.pipewrench.configuration.Configuration %>
<%@ val table: io.phdata.pipewrench.configuration.TableDefinition %>

set -euo pipefail

SOURCE_ROWCOUNT=

# Count number of rows in source
DRIVER="${configuration.jdbc.driverClass}"
if [[ $DRIVER =~ "sqlserver" ]]; then
  SOURCE_ROWCOUNT=$(sqoop-eval \
    --connect '${configuration.jdbc.url}' \
    --username '${configuration.jdbc.username}' \
    --password-file ${configuration.jdbc.passwordFile} \
    --query 'select count(*) FROM ${configuration.jdbc.schema}.[${table.sourceName}]' | grep -o '[[:digit:]]*')
else
  SOURCE_ROWCOUNT=$(sqoop-eval \
    --connect '${configuration.jdbc.url}' \
    --username '${configuration.jdbc.username}' \
    --password-file ${configuration.jdbc.passwordFile} \
    --query 'select count(*) FROM ${configuration.jdbc.schema}.${table.sourceName}' | grep -o '[[:digit:]]*')
fi

# Check target table
TARGET_ROWCOUNT=$(${configuration.hadoop.impalaShellCommand} --query "SELECT COUNT(*) FROM ${configuration.hadoop.stagingDatabase.name }.\`${table.destinationName}\`;" -B 2> /dev/null)

echo "source count: $SOURCE_ROWCOUNT"
echo "target count: $TARGET_ROWCOUNT"

if [ "$TARGET_ROWCOUNT" -ne "$SOURCE_ROWCOUNT" ]; then
  echo "TARGET AND SOURCE ROW COUNTS DO NOT MATCH"
  exit 1
fi

